<div>
  <a class="hiddenanchor" id="signin"></a>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1>Sign up</h1>
        <div>
          <%= f.email_field :email, autofocus: true, placeholder:"Username", class:"form-control" %>
        </div>
        <div>
          <%= f.password_field :password, placeholder:"Password", class:"form-control" %>
        </div>
        <div>
          <%= f.password_field :password_confirmation, placeholder:"Password Confirmation", class:"form-control" %>
        </div>
        <div>
          <%= f.submit "Save", class:"btn btn-primary", style: "float: none; margin-left: 0px" %>
        </div>

        <div class="clearfix"></div>

        <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>