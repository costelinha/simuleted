<h1>Welcome</h1>
<div class="animated flipInY col-lg-3 col-md-3 col-sm-6 ">
  <div class="tile-stats">
    <div class="icon"><i class="fa fa-sort-amount-desc"></i></div>
    <div class="count"><%= @user_statisc.total_questions%> </div>
    <h3>Total</h3>
    <p>Total questions answered</p>
  </div>
</div>

<div class="animated flipInY col-lg-3 col-md-3 col-sm-6 ">
  <div class="tile-stats">
    <div class="icon"><i class="fa fa-check-square-o"></i></div>
    <div class="count"><%= @user_statisc.right_questions%></div>
    <h3>Correct</h3>
    <p>Total correct questions answered</p>
  </div>
</div>

<div class="animated flipInY col-lg-3 col-md-3 col-sm-6 ">
  <div class="tile-stats">
    <div class="icon"><i class="fa fa-close"></i></div>
    <div class="count"><%= @user_statisc.wrong_questions%></div>
    <h3>Wrong</h3>
    <p>Total wrong questions answered</p>
  </div>
</div>