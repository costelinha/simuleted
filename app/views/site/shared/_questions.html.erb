 <div class="jumbotron">
   <h2 class="text-center"> <%= msg_jumbotron %> </h2>
 </div>
 <% @questions.each do |question| %>
 <%= form_with url: site_answer_path do |form|%>
 <div class="panel panel-default">
   <div class="panel-heading">
     <h3 class="panel-title">
       <%= link_to  "#{question.subject.description}-#{question.subject.questions.count} ", site_search_subject_path(question.subject_id, question.subject.description ), class:"label label-primary", style:"color: white; margin-right: 3px;"%>
       <%= question.description %>
     </h3>
   </div>
   <div class="panel-body">
     <ul>
       <% question.answers.each do |answer| %>
       <li style="list-style:none;">
         <div class="radio">
           <label>
             <%= radio_button_tag 'answer_id', answer.id%>
             <%= answer.description%>
           </label>
         </div>
       </li>
       <% end %>
       <%=form.submit 'Reply', class:"btn btn-default", id:"#{question.id}" %>
     </ul>
   </div>
 </div>
 <% end %>
 <% end %>
 <div class="text-center">
   <%= paginate @questions %>
 </div>